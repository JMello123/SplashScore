<Manager>:
    Menu:
        name:'menu'
    # Settings:
    #     name:'settings'
    Drill:
        name:'drill'
    SavedScore:
        name:'savedscore'
    SavedDetails:
        name:'saved_details'


<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding: '50dp',0
        canvas:
            Color: 
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size
                source:'img/background.jpg'
        Image:
            size_hint_y:.3
            source:'img/pre-splash.png'
            size:self.texture_size
        AnchorLayout:
            anchor_x:'center'
            Button:
                size_hint:.7,.7
                background_normal:'img/buttons/start.png'
                background_down:'img/buttons/start_press.png'
                border: 0,0,0,0
                on_release: 
                    app.root.current = 'drill'
                    root.manager.transition.direction = "left"
        GridLayout:
            orientation:'horizontal'
            cols:2
            padding:'30dp','30dp'
            spacing:'70dp'
            Button:
                size_hint_y:None
                pos_hint:{'x':.1,'y':.1}
                background_normal:'img/buttons/quit.png'
                background_down:'img/buttons/quit_press.png'
                border: 0,0,0,0
                on_release: app.stop()
            Button:
                size_hint_y: None
                pos_hint:{'x':.7,'y':.1}
                background_normal:'img/buttons/history.png'
                background_down:'img/buttons/history_press.png'
                border: 0,0,0,0
                on_release: 
                    app.root.current = 'savedscore'
                    root.manager.transition.direction = "left"
            
<Drill>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color: 
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size
                source:'img/background.jpg'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Sessão'
                    app_icon:''
                    previous_image_width:'30dp'   
                    on_release: root.exit_confirm()
                ActionButton:
                    text:'Finalizar sessão'
                    icon:'img/buttons/save.png'
                    on_release: 
                        root.finish_session()
                        root.manager.transition.direction = "left"
                        app.root.current = 'menu'
        # Placar 
        BoxLayout:
            size_hint_x: .8
            padding:30,0,0,0
            pos_hint:{'x':.1,'y':.6}
            canvas.before:
                Color: 
                    rgba:1,1,1,1
                Rectangle:
                    pos:self.pos
                    size:self.width, self.height - dp(30)
                    source:'img/scoreboard.png'
            Label:
                id: points
                font_name:'font/CursedTimerUlil-Aznm.ttf'
                markup:True
                size_hint_x:.6
                pos_hint:{'y':-.1}
                font_size: '20sp'
                color:1,0,0,1
            Label:
                id: percentage
                font_name:'font/CursedTimerUlil-Aznm.ttf'
                pos_hint:{'y':-.1}
                font_size: '20sp'
                color:1,1,0,1
        # Bolas com o histórico
        BoxLayout:
            orientation:'vertical'
            Button:
                id: return_last_shot
                pos_hint: {'x':.4,'y':.3}
                size_hint:.1,.3
                text:'<-'
                on_release: 
                    # root.ball_render_pos_min -= 1
                    print(root.ball_render_pos_min)
            GridLayout:
                id: boxBall
                cols: 10
                height: '10dp'
                size_hint: .7,.7
                pos_hint: {'x':.15}
                spacing: '3dp'
                # padding: '3dp'
        # Botões de ação
        BoxLayout:
            spacing: '50dp'
            size_hint_y: 1.5
            padding: [10,10]
            Button:
                border:0,0,0,0
                id: f_splash
                background_normal: 'img/buttons/splash.png'
                background_down:'img/buttons/splash_press.png'
                on_release: 
                    root.shot_splash()
                    print(root.ball_render_pos_min)
            Button:
                id: f_wrong
                border:0,0,0,0
                background_normal: 'img/buttons/wrong.png'
                background_down:'img/buttons/wrong_press.png'
                on_release: 
                    root.shot_wrong()
                    print(root.ball_render_pos_min)

<SavedScore>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color: 
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size
                source:'img/background.jpg'
        ActionBar:
            ActionView:
                background_color:0,0
                ActionPrevious:
                    title:'Histórico'
                    app_icon: ''
                    previous_image_width:'30dp'   
                    on_release: 
                        app.root.current = 'menu'
                        root.manager.transition.direction = "right"
                ActionButton:
                    text:'Detalhes'
                    icon:'img/buttons/graph.png'
                    on_release: 
                        root.manager.transition.direction = "left"
                        app.root.current = 'saved_details'
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                padding: '5dp'
                spacing: '5dp'
                height: self.minimum_height
                

<SessionScore>:
    id: boxSessions
    size_hint_y: None
    height: '100dp'
    canvas:
        Color: 
            rgba:.4,.4,.4,.7
        Rectangle:
            pos:self.pos
            size:self.size
    Label:
        id:accuracy
        font_size:'20sp'
    BoxLayout:
        orientation:'vertical'
        Label:
            id:result
            font_size:'20sp'
        Label:
            text:'Sequências'
            size_hint_y:.7
            font_size:'11sp'
        BoxLayout:
            orientation:'horizontal'
            Label:
                id:best_sequence
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        source:'img/hot.png'
                        size: self.width/5, self.height/2
                        pos: self.center_x+ sp(10), self.center_y - sp(7)
                size_hint_x:.7
                font_size:'15sp'
            Label:
                id:worst_sequence
                size_hint_x:.7
                font_size:'15sp'
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        source:'img/cold.png'
                        size: self.width/5, self.height/2
                        pos: self.center_x+ sp(10), self.center_y - sp(7)
        Label:
            id:date
            size_hint_x:1
            font_size:'10sp'

<SavedDetails>:
    BoxLayout:
        id: details
        orientation:'vertical'
        canvas:
            Color: 
                rgba:1,1,1,1
            Rectangle:
                pos:self.pos
                size:self.size
                source:'img/background.jpg'
        ActionBar:
            ActionView:
                background_color:0,1
                ActionPrevious:
                    title:'Detalhes'
                    app_icon: ''
                    previous_image_width:'30dp'   
                    on_release: 
                        app.root.current = 'savedscore'
                        root.manager.transition.direction = "right"
        ScrollView:
            size_hint_x: None
            width: root.width
            Grafico: 
                id: graph
                # width: root.width * ((10)*.08)
        
        BoxLayout:
            orientation:'vertical'
            padding: '5dp'
            spacing: '5dp'
            LabelDetails:
                id:averageAccuracy
            LabelDetails:
                id:totalPoints
            LabelDetails:
                id:totalAttempts
            LabelDetails:
                id:bestAccuracy
            LabelDetails:
                id:bestSequenceAllofTime

<LabelDetails@Label>:
    canvas.before:
        Color: 
            rgba:.4,.4,.4,.7
        Rectangle:
            pos:self.pos
            size:self.size

<PopupReturn>:
    title:'Deseja sair? Todo seu progresso será perdido'
    size_hint:.7,.3
    BoxLayout:
        id:popup
        Button:
            text:'Sim'
            on_release: 
                app.root.current = 'menu'
                app.root.transition.direction = "right"
                root.dismiss()
        Button:
            text:'Não'
            on_release: root.dismiss()